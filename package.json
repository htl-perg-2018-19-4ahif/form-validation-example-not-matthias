{
  "name": "9025-form-validation",
  "version": "1.0.0",
  "description": "Homework for Mobile Computing course at HTL Perg",
  "main": "index.js",
  "scripts": {
    "copy-bootstrap": "cpx ./node_modules/bootstrap/dist/css/bootstrap.css dist/ && cpx ./node_modules/bootstrap/dist/js/bootstrap.js dist/",
    "copy-jquery": "cpx ./node_modules/jquery/dist/jquery.js dist/",
    "build": "cpx *.{html,css} dist/ && npm run copy-bootstrap && npm run copy-jquery",
    "lint": "tslint --config tslint.json *.ts",
    "start": "concurrently \"tsc --outDir dist --watch form-validation.ts\" \"browser-sync start -c bs-config.js\""
  },
  "author": "not-matthias",
  "license": "MIT",
  "dependencies": {
    "bootstrap": "^4.1.3",
    "jquery": "^3.3.1",
    "typescript": "^3.1.3"
  },
  "devDependencies": {
    "@types/jquery": "^3.3.22",
    "browser-sync": "^2.26.3",
    "concurrently": "^4.0.1",
    "cpx": "^1.5.0",
    "tslint": "^5.11.0"
  }
}
